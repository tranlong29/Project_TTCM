@model fontend.Models.Login
@{
   
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Webleb</title>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet"
          href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../css/style.css" />
</head>
<body class="login">
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <h6 class="mb-0 pb-3">
                            <span>Log In </span><span>Sign Up</span>
                        </h6>
                        <input class="checkbox"
                               type="checkbox"
                               id="reg-log"
                               name="reg-log" />
                        <label for="reg-log"></label>
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <div class="card-front" >
                                    <div class="center-wrap" >
                                        <form class="section text-center" asp-action="LoginUser" asp-controller="Login">
                                            <h4 class="mb-4 pb-3">Log In</h4>
                                            <div class="form-group">
                                                <input type="text"
                                                    asp-for="Username"
                                                       class="form-style"
                                                       placeholder="UserName" />
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password"
                                                       asp-for="Password"
                                                       class="form-style"
                                                       placeholder="Password" />
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <input type="submit" class="btn btns mt-4" value="Login"/>
                                            <p class="mb-0 mt-4 text-center">
                                                @TempData["Message"]
                                            </p>
                                        </form>
                                    </div>
                                </div>
                                <div class="card-back">
                                    <div class="center-wrap">
                                        <form class="section text-center" asp-action="Register" asp-controller="Login">
                                            <h4 class="mb-3 pb-3">Sign Up</h4>
                                            <div class="form-group">
                                                <input type="text"
                                                       asp-for="Username"
                                                       class="form-style"
                                                       placeholder="UserName" />
                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="tel"
                                                       asp-for="Phone"
                                                       class="form-style"
                                                       placeholder="Phone Number" />
                                                <i class="input-icon uil uil-phone"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="email"
                                                    asp-for = "Email"
                                                       class="form-style"
                                                       placeholder="Email" />
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password"
                                                    asp-for="Password"
                                                       class="form-style"
                                                       placeholder="Password" />
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <input type="submit" class="btn btns mt-4" value="Register" />
                                            <p class="mb-0 mt-4 text-center">
                                                @TempData["posted"]
                                            </p>
                                        </form>
                                        

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


